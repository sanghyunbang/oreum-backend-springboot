<mapper namespace="com.oreum.goods.dao.GoodsLikeDAO">
  <insert id="insertLike">
    INSERT INTO likes (user_id, goods_id)
    VALUES (#{userId}, #{goodsId})
  </insert>

  <delete id="deleteLike">
    DELETE FROM likes
    WHERE user_id = #{userId} AND goods_id = #{goodsId}
  </delete>

  <select id="existsLike" resultType="boolean">
    SELECT COUNT(*) > 0
    FROM likes
    WHERE user_id = #{userId} AND goods_id = #{goodsId}
  </select>
</mapper>